@page
@model VHZ_App.Pages.AboutModel
@{
    ViewData["Title"] = "О компании";
}

@section Styles {
    <link rel="stylesheet" href="~/css/about.css" />
}

<div class="about-container">
    <div class="about-header">
        <h1 class="about-title">О компании</h1>
        <p class="about-subtitle">Публичное акционерное общество «Владимирский химический завод»</p>
    </div>

    <div class="about-content">
        @foreach (var info in Model.CompanyInfo)
        {
            @if (info.SectionName == "Приветствие" || info.SectionName == "Введение")
            {
                <div class="about-section">
                    <p>@info.Description</p>
                </div>
            }
            else if (info.SectionName == "Сертификация" || info.SectionName == "Заключение")
            {
                <div class="about-highlight">
                    <p>@info.Description</p>
                </div>
            }
            else
            {
                <div class="about-section">
                    <h3 class="about-section-title">@info.SectionName</h3>
                    <p>@info.Description</p>
                </div>
            }
        }
    </div>
</div>
<p></p>
<label class="end-text"></label>