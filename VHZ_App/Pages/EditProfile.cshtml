@page
@model VHZ_App.Pages.EditProfileModel
@{
    ViewData["Title"] = "Редактирование профиля";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" />
}

<div class="profile-wrapper">
    <div class="main-content">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Редактирование профиля</h5>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <!-- Основная информация -->
                    <h6 class="mb-3">Личные данные</h6>
                    <div class="row g-3 mb-4">
                        <div class="col-md-4">
                            <label asp-for="Input.Surname" class="form-label"></label>
                            <input asp-for="Input.Surname" class="form-control" />
                            <span asp-validation-for="Input.Surname" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Input.Name" class="form-label"></label>
                            <input asp-for="Input.Name" class="form-control" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Input.Pathronimic" class="form-label"></label>
                            <input asp-for="Input.Pathronimic" class="form-control" />
                            <span asp-validation-for="Input.Pathronimic" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Контактная информация -->
                    <h6 class="mb-3">Контактная информация</h6>
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Input.ContactNumber" class="form-label"></label>
                            <input asp-for="Input.ContactNumber" class="form-control" />
                            <span asp-validation-for="Input.ContactNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Информация о компании -->
                    <h6 class="mb-3">Информация о компании</h6>
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Input.NameCompany" class="form-label"></label>
                            <input asp-for="Input.NameCompany" class="form-control" />
                            <span asp-validation-for="Input.NameCompany" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.Post" class="form-label"></label>
                            <input asp-for="Input.Post" class="form-control" />
                            <span asp-validation-for="Input.Post" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.Inn" class="form-label"></label>
                            <input asp-for="Input.Inn" class="form-control" />
                            <span asp-validation-for="Input.Inn" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.Kpp" class="form-label"></label>
                            <input asp-for="Input.Kpp" class="form-control" />
                            <span asp-validation-for="Input.Kpp" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Аватар -->
                    <h6 class="mb-3">Аватар</h6>
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label class="form-label">Текущий аватар</label>
                            <div>
                                <img src="@Model.CurrentAvatarPath" alt="Аватар" style="width: 100px; height: 100px; object-fit: cover; border-radius: 50%;" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="AvatarFile" class="form-label">Новый аватар</label>
                            <input type="file" asp-for="AvatarFile" class="form-control" accept="image/*" />
                            <span asp-validation-for="AvatarFile" class="text-danger"></span>
                            <div class="form-text">Максимальный размер файла: 2MB</div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="/Profile" class="btn btn-outline-secondary">Отмена</a>
                        <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<p></p>
<label class="end-text"></label>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}