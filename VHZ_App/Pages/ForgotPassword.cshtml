@page
@model VHZ_App.Pages.ForgotPasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Восстановление пароля";
}
<div class="register-wrapper">
    <div class="left-panel">
        <img src="/Image/logo.svg" alt="Логотип" class="logo" />
    </div>
    <div class="right-panel">
        <h2>Восстановление пароля</h2>
        <p>Введите ваш email, и мы отправим ссылку для сброса пароля.</p>

        <form method="post">
            <input class="form-control" name="Email" placeholder="Email" required type="email" />
            <button type="submit" class="btn btn-submit mt-3">Отправить</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-info mt-3">@Model.Message</div>
        }

        <a href="/Account" class="btn btn-link mt-3">Назад к входу</a>
    </div>
</div>
