@page
@model VHZ_App.Pages.RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
    ViewData["Title"] = "Регистрация";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/auth.css" />
</head>
<body>
    <div class="register-wrapper">
        <!-- Левая часть -->
        <div class="left-panel">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img src="/Image/logo.svg" alt="Логотип" class="logo" />
            </a>
            <h1>Зарегистрируйтесь</h1>
            <p>Создайте аккаунт для доступа к сервисам.</p>
        </div>

        <!-- Правая часть -->
        <div class="right-panel">
            <h2>Регистрация</h2>
            <p>Введите свои данные ниже.</p>

            <form method="post">
                <!-- Здесь выводим все ошибки валидации -->
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-section mt-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <input class="form-control" name="CompanyFull" placeholder="Полное название компании" />
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" name="INN" placeholder="ИНН" pattern="\d{10}|\d{12}" title="ИНН должен содержать 10 или 12 цифр" required />
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" name="KPP" placeholder="КПП" pattern="\d{9}" title="КПП должен содержать 9 цифр" />
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" name="Name" placeholder="Имя" required />
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" name="Surname" placeholder="Фамилия" required />
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" name="Pathronimic" placeholder="Отчество" />
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" name="Position" placeholder="Должность" />
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" name="Email" placeholder="Адрес эл. почты" type="email" required />
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" name="Phone" placeholder="Телефон" type="tel" pattern="\+?[0-9\s\-\(\)]{7,20}" title="Введите корректный номер телефона" required />
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" name="Login" placeholder="Логин" minlength="4" required />
                        </div>
                        <div class="col-md-6">
                            <input type="password" class="form-control" name="Password" placeholder="Пароль" minlength="6" required />
                        </div>
                        <div class="col-md-6">
                            <input type="password" class="form-control" name="ConfirmPassword" placeholder="Подтверждение пароля" required />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-submit">Продолжить</button>
                </div>
            </form>

            <footer class="footer">
                © 2025 ВХЗ. Все права защищены.
            </footer>
        </div>
    </div>
</body>
</html>
<p></p>
<label class="end-text"></label>