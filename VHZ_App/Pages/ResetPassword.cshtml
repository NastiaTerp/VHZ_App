@page "{token?}"
@model VHZ_App.Pages.ResetPasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Сброс пароля";
}
<link rel="stylesheet" href="~/css/auth-reset.css" />

<div class="register-wrapper">
    <div class="left-panel">
        <a class="navbar-brand" asp-area="" asp-page="/Index">
            <img src="/Image/logo.svg" alt="Логотип" class="logo" />
        </a>
        <h1>Восстановите доступ<br />к вашему аккаунту</h1>
        <p>Просто введите email, и мы вышлем ссылку для сброса пароля.</p>
    </div>
    <div class="right-panel">
        <h2 class="h2-2">Сброс пароля</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }
        else if (Model.IsTokenValid)
        {
            <form method="post">
                <input type="hidden" name="Token" value="@Model.Token" />
                <input class="form-control" name="NewPassword" placeholder="Новый пароль" type="password" minlength="6" required />
                <input class="form-control" name="ConfirmPassword" placeholder="Подтверждение пароля" type="password" minlength="6" required />
                <button type="submit" class="btn btn-submit">Сменить пароль</button>
            </form>
        }
        else
        {
            <div class="alert alert-warning">Ссылка недействительна или истекла.</div>
        }

        <a href="/Account" class="btn btn-link">Назад к входу</a>
    </div>
</div>
<p></p>
<label class="end-text"></label>