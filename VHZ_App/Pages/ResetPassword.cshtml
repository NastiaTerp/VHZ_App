@page "{token?}"
@model VHZ_App.Pages.ResetPasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Сброс пароля";
}
<div class="register-wrapper">
    <div class="left-panel">
        <img src="/Image/logo.svg" alt="Логотип" class="logo" />
    </div>
    <div class="right-panel">
        <h2>Сброс пароля</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }
        else if (Model.IsTokenValid)
        {
            <form method="post">
                <input type="hidden" name="Token" value="@Model.Token" />
                <input class="form-control" name="NewPassword" placeholder="Новый пароль" type="password" minlength="6" required />
                <input class="form-control" name="ConfirmPassword" placeholder="Подтверждение пароля" type="password" minlength="6" required />
                <button type="submit" class="btn btn-submit mt-3">Сменить пароль</button>
            </form>
        }
        else
        {
            <div class="alert alert-warning">Ссылка недействительна или истекла.</div>
        }

        <a href="/Account" class="btn btn-link mt-3">Назад к входу</a>
    </div>
</div>
